<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.jjcasanova.arduinoluces.MainActivityArduinoLuces"
    android:longClickable="false"
    android:background="@drawable/wpj58xwj"
    android:touchscreenBlocksFocus="false">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/programa_de_encendido_y_apagado_de_luces"
        android:id="@+id/textViewInicialEncendidoApagadoLuces"
        android:textColor="#fcfafa"
        android:textAlignment="center"
        android:textIsSelectable="false"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <RelativeLayout
        android:layout_width="200dp"
        android:layout_height="180dp"
        android:layout_alignParentStart="true"
        android:id="@+id/relativeLayout"
        android:layout_alignParentBottom="true">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Habilitar"
            android:id="@+id/button"
            android:layout_below="@+id/textView"
            android:layout_alignParentStart="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Buscar"
            android:id="@+id/button2"
            android:layout_below="@+id/button"
            android:layout_alignParentStart="true"
            android:layout_alignEnd="@+id/button" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Conexión"
            android:id="@+id/button7"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/button" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Desconexión"
            android:id="@+id/button8"
            android:layout_alignTop="@+id/button2"
            android:layout_alignEnd="@+id/button7"
            android:layout_alignStart="@+id/button7" />
    </RelativeLayout>

    <TableLayout
        android:layout_width="180dp"
        android:layout_height="match_parent"
        android:layout_toEndOf="@+id/relativeLayout"
        android:layout_alignTop="@+id/relativeLayout"
        android:id="@+id/tableLayout"
        android:layout_alignParentEnd="false"
        android:layout_alignParentTop="false"
        android:clickable="false"
        android:baselineAligned="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:layout_alignWithParentIfMissing="false"
        android:gravity="center_vertical|right|center_horizontal"
        android:layout_alignParentRight="false"
        android:longClickable="false"
        android:measureWithLargestChild="false"
        android:nestedScrollingEnabled="false"
        android:layout_centerVertical="true">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"></TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:text="New Button"
                android:id="@+id/button3"
                android:layout_column="0"
                android:textSize="10sp"
                android:layout_width="75dp" />

            <Button
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:text="New Button"
                android:id="@+id/button5"
                android:layout_column="13"
                android:textSize="10sp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"></TableRow>

